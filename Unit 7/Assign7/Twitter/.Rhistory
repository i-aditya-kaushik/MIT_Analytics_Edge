wordcloud(colnames(allTweets), colSums(allTweets), colors = c('black','gray','dark gray'),random.order = FALSE,rot.per=0.5)
wordcloud(colnames(allTweets), colSums(allTweets), random.color=TRUE,random.order = FALSE,rot.per=0.5)
